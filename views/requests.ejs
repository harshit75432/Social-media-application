<%-include('partials/header.ejs')%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Peoples</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<style>
    body{background-color:aliceblue } 
</style>
<body>
   
    <div class="container-fluid">

      
        <h3 class="m-2 mb-3 ">Requests</h3>

        <div class="row">

         <% if(requests){ %>

          <% for(let i = 0; i < requests.length; i++) { %> 
                <div class="col-md-3">
                  <div class="card-body mb-3 w-100">
                    <div class="d-flex justify-content-center align-items-center w-100">
                      <div class=" mx-3" style="width: 4rem;">
                        <img src="https://images.unsplash.com/photo-1633332755192-727a05c4013d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dXNlcnxlbnwwfHwwfHx8MA%3D%3D&w=1000&q=80" class="card-img-top" alt="..."  style="border-radius: 50%;">
                        
                      </div>
                      <div class="d-flex flex-column">
    
                      <div class="flex-column mb-2">
                        <small class="card-title mx-2 fw-bold"><%= first_name %> <%= last_name %></small>
                      </div>
                      <div class="d-flex justify-content-center align-items-center">
                        <button type="submit" class="btn btn-primary btn-sm ms-2 mx-2 add-btn" >Accept</button>
                        <a href="#" class="btn btn-sm" style="background-color: #D3D3D3;">Decline</a>
                      </div>
                      
                      </div>
                    </div>
                
                  </div>
                </div>
          <% } %>
         <% }else { %>
            <p>null</p>
        <% } %>
        </div>  

     
    </div>
    <!-- <script src="/js/xhr.js"></script> -->
</body>
</html>